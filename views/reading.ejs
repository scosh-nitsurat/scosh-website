    <div style="padding-top: 20em; padding-bottom: 17em;">
        <div class="head" style="padding: 3em;">
            <h1 style="text-align: center; font-family: CeraPro-bold"><%= blog.title %></h1>
            <h4 style="text-align: center; font-family: CeraPro-regular"> By <%=blog.auther %></h4>
            <div style="text-align: center; margin: 10em;">
                <% if(blog.image != 'null') %>
                <img width="100%" src="<%= blog.image %>">
            </div>
        </div>
        <div
            style="margin-left:10%; margin-right:10%; margin-top:10%; margin-bottom: 10%;text-align: left; font-size: 2em;">
            <p style="font-family:'Times New Roman', Times, serif "> <%= blog.content %> </p>
        </div>
    </div>
    <div class="row" style="margin-bottom: 1%;">
        <div class="col-12 text-center">
            <h1 class="what">Related Blogs</h1>
        </div>
    </div>

    <section class="cards-wrapper">
        <% for(var i = 0; i < Math.min(blogs.length,3); ++i) { %>
        <div class="card-grid-space">
            <a class="card" href="<%= blogs[i].id %>" style="--bg-img: url('<%= blogs[i].image %>')">
                <div>
                    <h1><%= blogs[i].title %></h1>
                    <p style="padding-bottom: 10.5em;">
                        <%= blogs[i].content.substring(0,Math.min(100,blogs[i].content.length)) %> ...</p>
                    <div class="views">
                        <p><%=blogs[i].views %> Views</p>
                    </div>
                    <div class="date"><%= blogs[i].date %></div>
                    <div class="auther">
                        <p> By <%= blogs[i].auther %> </p>
                    </div>

                    <div class="tags">
                        <% for(var j = 0; j < Math.min(3,blogs[i].tags.length); ++j) { %>
                        <div class="tag"><%= blogs[i].tags[j].tag %></div>
                        <% } %>
                    </div>
                </div>
            </a>
        </div>
        <% } %>
    </section>
    </div>
    </div>


